import { FastifyInstance } from 'fastify';

export default async function (app: FastifyInstance) {
  app.get('/', async () => ({
    status: 'healthy',
    timestamp: new Date().toISOString(),
    service: '{{serviceName}}'
  }));

  app.get('/readiness', async () => ({
    ready: true,
    timestamp: new Date().toISOString()
  }));
}
